<div class="container">
  <h1>商品新規登録</h1>
  <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
    <div class="row my-3">
      <%= f.label :image, "商品画像", class: "col-lg-1 offset-lg-4" %>
      <%= f.file_field :image, accept: "image/*", class: "col-lg-3"%>
    </div>
    <div class="row mb-3">
      <%= f.label :name, "商品名", class: "col-lg-1 offset-lg-4" %>
      <%= f.text_field :name, class: "col-lg-3" %>
    </div>
    <div class="row mt-3">
      <%= f.label :name, "商品説明", class: "col-lg-1 offset-lg-4" %>
      <%= f.text_area :introduction, class: "col-lg-3" %>
    </div>
    <div class="row my-3">
      <%= f.label :genre_id, "ジャンル", class: "col-lg-1 offset-lg-4" %>
      <div class="col-lg-3">
        <%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id] }, { include_blank: '選択してください'}, { required: true } %>
      </div>
    </div>
    <div class="row">
      <%= f.label :price, "税抜価格", class: "col-lg-1 offset-lg-4" %>
      <%= f.text_field :price, class: "col-lg-3" %>
    </div>
    <%= f.submit '新規登録', class: "d-block mx-auto m-3 px-2" %>
  <% end %>
</div>
