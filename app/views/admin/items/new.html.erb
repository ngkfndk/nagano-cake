<h1>新規登録ページ</h1>
<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :name %>
 
  <h4>本文</h4>
  <%= f.text_area :introduction %>
  <%= f.label :image, "商品画像" %>
  <%= f.file_field :image, accept: "image/*" %>
  <%= f.label :genre_id, "ジャンル" %>
  <%= f.select :genre_id, @genres.map{ |genre| [genre.name, genre.id] }, { include_blank: '選択してください'}, { required: true } %>
  <%= f.text_field :price %>
  <%= f.submit '投稿' %>
<% end %>